<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container shadow-lg">
                {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'adhérent'}}) }}
                                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom de l\'adhérent'}}) }}
                                {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mt-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                                {{ form_label(form.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mt-3">
                        <div class="col-12">
                            <div class="form-floating">
                                {{ form_widget(form.dateAdhesion, {'attr': {'class': 'form-control', 'placeholder': 'Date d\'adhésion'}}) }}
                                {{ form_label(form.dateAdhesion, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_errors(form.dateAdhesion) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-actions mt-4">
                        <button type="submit" class="btn btn-club btn-lg">
                            <i class="bi bi-check-circle me-2"></i>{{ button_label|default('Enregistrer') }}
                        </button>
                        <a href="{{ path('app_adherent_index') }}" class="btn btn-outline-club btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
