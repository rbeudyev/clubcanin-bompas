        <!-- Horizontal Scroll JavaScript -->
        <script>
            // Get responsive scroll amount based on screen size
            function getScrollAmount() {
                const width = window.innerWidth;
                if (width >= 1200) return 375; // 350px + 25px gap
                if (width >= 992) return 342; // 320px + 22px gap
                if (width >= 768) return 300; // 280px + 20px gap
                if (width >= 576) return 278; // 260px + 18px gap
                if (width >= 400) return 255; // 240px + 15px gap
                return 232; // 220px + 12px gap
            }
            
            function scrollEvents(direction) {
                const container = document.querySelector('.events-horizontal-scroll .scroll-container');
                const scrollAmount = getScrollAmount();
                
                if (direction === 'next') {
                    container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
                } else {
                    container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
                }
            }
            
            function scrollResults(direction) {
                const container = document.querySelector('.results-horizontal-scroll .scroll-container');
                const scrollAmount = getScrollAmount();
                
                if (direction === 'next') {
                    container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
                } else {
                    container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
                }
            }
            
            // Touch support for mobile
            let startX = 0;
            let startY = 0;
            
            document.addEventListener('touchstart', function(e) {
                startX = e.touches[0].clientX;
                startY = e.touches[0].clientY;
            });
            
            document.addEventListener('touchend', function(e) {
                if (!startX || !startY) return;
                
                const endX = e.changedTouches[0].clientX;
                const endY = e.changedTouches[0].clientY;
                
                const diffX = startX - endX;
                const diffY = startY - endY;
                
                // Only trigger if horizontal swipe is more significant than vertical
                if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 50) {
                    const eventsContainer = document.querySelector('.events-horizontal-scroll .scroll-container');
                    const resultsContainer = document.querySelector('.results-horizontal-scroll .scroll-container');
                    
                    if (eventsContainer && eventsContainer.contains(e.target.closest('.events-horizontal-scroll'))) {
                        if (diffX > 0) {
                            scrollEvents('next');
                        } else {
                            scrollEvents('prev');
                        }
                    } else if (resultsContainer && resultsContainer.contains(e.target.closest('.results-horizontal-scroll'))) {
                        if (diffX > 0) {
                            scrollResults('next');
                        } else {
                            scrollResults('prev');
                        }
                    }
                }
                
                startX = 0;
                startY = 0;
            });
        </script>
