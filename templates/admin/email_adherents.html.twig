{% extends 'base.html.twig' %}

{% block title %}Envoyer un mail aux adhérents{% endblock %}

{% block body %}
<section class="club-header">
    <div class="container py-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold mb-2">
                    <i class="bi bi-envelope-paper-heart text-warning me-3"></i>
                    Contacter tous les adhérents
                </h1>
                <p class="lead mb-0">Rédigez votre message et envoyez-le à l’ensemble des membres.</p>
            </div>
            <a href="{{ path('app_admin') }}" class="btn btn-outline-light mt-3 mt-md-0">
                <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
            </a>
        </div>
    </div>
</section>

{% for message in app.flashes('success') %}
    <div class="container mt-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="container mt-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    </div>
{% endfor %}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-club-light text-white">
                        <h2 class="h4 mb-0">
                            <i class="bi bi-chat-left-text me-2"></i>Votre message
                        </h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.subject) }}
                                {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.subject) }}</div>
                            </div>
                            <div class="mb-4">
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.content) }}</div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_admin') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-chevron-left me-1"></i>Annuler
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-send me-2"></i>Envoyer à tous les adhérents
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}


