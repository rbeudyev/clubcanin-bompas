{% extends 'base.html.twig' %}

{% block title %}Inscription - Club Canin de Bompas{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="form-container shadow-lg">
                <div class="text-center mb-4">
                    <i class="bi bi-heart-fill text-danger me-2" style="font-size: 2rem;"></i>
                    <h2 class="fw-bold text-primary">Inscription</h2>
                    <p class="text-muted">Rejoignez notre communauté canine</p>
                </div>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'modern-form'}}) }}
                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
                            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-floating">
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Choisissez un mot de passe'}}) }}
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-club btn-lg">
                            <i class="bi bi-person-plus me-2"></i>S'inscrire
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Déjà un compte ? 
                            <a href="{{ path('app_login') }}" class="text-primary fw-bold">Se connecter</a>
                        </p>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
