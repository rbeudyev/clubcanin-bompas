<form method="post" action="{{ path('app_admin_information_delete', {'id': information.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette information ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ information.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash me-2"></i>Supprimer cette information
    </button>
</form>
